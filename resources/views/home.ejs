
    <section class="hero">
        <div class="container mx-auto flex items-center justify-between" style="padding: 20px;">
            <div class="w-1/2" >
                <h6 class="text-lg"><em>Are You Hungry?</em></h6>
                <h1 class="text-3xl md:text-6xl font-bold"><b>Don't Wait!!</b></h1>
                <h6 class="text-lg"><em>Happiness is a slice of Pizza...üçï‚ù§Ô∏è</em></h6>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
                
            </div>
            <div class="w-full md:w-1/2">
                <img src="/imgg/hero-pizza2-modified.png" alt="" style="max-width: 1200px; max-height: 650px; padding: 20px;">
            </div>
            

        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8 mx-8">All Pizzas</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16 ">
        <% pizzas.forEach(function(pizza){%>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/imgg/<%=pizza.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><b><em><%=pizza.name %></em></b></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><b><%=pizza.size %></b></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">Rs <%=pizza.price %></span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">ADD</span>
                        </button>
                    </div>
                </div>
            </div>

      <%  }) %>

          


     

        </div>


    </section>
  